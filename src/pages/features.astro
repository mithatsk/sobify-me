<style>
	/* Features Hero */
	.features-hero {
		text-align: center;
		padding: var(--space-3xl) 0;
		margin-bottom: var(--space-3xl);
		position: relative;
	}

	.features-hero::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: radial-gradient(circle at 50% 50%, rgba(99, 102, 241, 0.1) 0%, transparent 70%);
		z-index: -1;
	}

	.hero-badge {
		display: inline-block;
		padding: var(--space-sm) var(--space-lg);
		background: var(--gradient-card);
		backdrop-filter: blur(10px);
		border: 1px solid rgba(255, 255, 255, 0.2);
		border-radius: var(--radius-full);
		font-size: 0.875rem;
		font-weight: 600;
		color: var(--primary);
		margin-bottom: var(--space-xl);
		box-shadow: var(--shadow-md);
	}

	.features-hero h1 {
		margin-bottom: var(--space-lg);
		max-width: 800px;
		margin-left: auto;
		margin-right: auto;
	}

	.features-hero p {
		font-size: 1.25rem;
		color: var(--gray-600);
		max-width: 700px;
		margin: 0 auto;
		line-height: 1.6;
	}

	/* Features Overview */
	.features-overview {
		margin-bottom: var(--space-3xl);
		padding: var(--space-3xl) var(--space-xl);
		background: var(--gradient-primary);
		border-radius: var(--radius-2xl);
		color: var(--white);
	}

	.overview-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: var(--space-xl);
		text-align: center;
	}

	.overview-item {
		position: relative;
	}

	.overview-number {
		font-size: clamp(2rem, 4vw, 3rem);
		font-weight: 800;
		line-height: 1;
		margin-bottom: var(--space-sm);
		text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
	}

	.overview-label {
		font-size: 1rem;
		opacity: 0.9;
		font-weight: 500;
	}

	/* Feature Items */
	.features-detailed {
		margin-bottom: var(--space-3xl);
	}

	.feature-item {
		display: grid;
		grid-template-columns: 1fr 2fr;
		gap: var(--space-3xl);
		align-items: center;
		margin-bottom: var(--space-3xl);
		position: relative;
		overflow: hidden;
	}

	.feature-item.reverse {
		grid-template-columns: 2fr 1fr;
	}

	.feature-item.reverse .feature-visual {
		order: 2;
	}

	.feature-item.reverse .feature-content {
		order: 1;
	}

	.feature-visual {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		text-align: center;
		position: relative;
	}

	.feature-icon {
		font-size: 4rem;
		margin-bottom: var(--space-xl);
		position: relative;
		z-index: 2;
	}

	.visual-elements {
		position: relative;
	}

	/* Visual Elements */
	.progress-ring {
		width: 120px;
		height: 120px;
		border: 8px solid var(--gray-200);
		border-radius: 50%;
		position: relative;
		overflow: hidden;
	}

	.progress-fill {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: conic-gradient(var(--primary) 75%, transparent 75%);
		border-radius: 50%;
	}

	@keyframes rotate {
		from { transform: rotate(0deg); }
		to { transform: rotate(270deg); }
	}

	.community-avatars {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: var(--space-sm);
	}

	.avatar {
		width: 48px;
		height: 48px;
		border-radius: 50%;
		background: var(--gradient-secondary);
		display: flex;
		align-items: center;
		justify-content: center;
		color: var(--white);
		font-weight: 700;
		border: 3px solid var(--white);
		box-shadow: var(--shadow-md);
	}

	.avatar-count {
		background: var(--gray-600);
		color: var(--white);
		padding: var(--space-sm) var(--space-md);
		border-radius: var(--radius-full);
		font-size: 0.875rem;
		font-weight: 600;
		margin-left: var(--space-sm);
	}

	.goals-chart {
		display: flex;
		flex-direction: column;
		gap: var(--space-sm);
		width: 120px;
	}

	.goal-bar {
		height: 12px;
		background: var(--gray-200);
		border-radius: var(--radius-full);
		position: relative;
		overflow: hidden;
	}

	.goal-bar::after {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		height: 100%;
		width: var(--progress, 0%);
		background: var(--gradient-secondary);
		border-radius: var(--radius-full);
		animation: progress 1.5s ease-out;
	}

	@keyframes progress {
		from { width: 0%; }
		to { width: var(--progress, 0%); }
	}

	.tools-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: var(--space-md);
		width: 120px;
	}

	.tool-item {
		width: 48px;
		height: 48px;
		background: var(--gradient-card);
		border-radius: var(--radius-lg);
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 1.5rem;
		box-shadow: var(--shadow-md);
		animation: float 3s ease-in-out infinite;
		animation-delay: calc(var(--i, 0) * 0.2s);
	}

	.analytics-chart {
		display: flex;
		align-items: end;
		gap: var(--space-sm);
		height: 80px;
		padding: var(--space-md);
		background: var(--gray-100);
		border-radius: var(--radius-lg);
	}

	.chart-bar {
		width: 16px;
		height: var(--height, 50%);
		background: var(--gradient-primary);
		border-radius: var(--radius-sm);
		animation: chartGrow 1.5s ease-out;
	}

	@keyframes chartGrow {
		from { height: 0%; }
		to { height: var(--height, 50%); }
	}

	.security-shield {
		position: relative;
		width: 120px;
		height: 120px;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.shield-icon {
		font-size: 2rem;
		position: relative;
		z-index: 2;
	}

	.security-rings {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
	}

	.ring {
		position: absolute;
		border: 2px solid var(--primary);
		border-radius: 50%;
		opacity: 0.3;
		animation: pulse 2s ease-in-out infinite;
	}

	.ring-1 {
		width: 40%;
		height: 40%;
		top: 30%;
		left: 30%;
	}

	.ring-2 {
		width: 70%;
		height: 70%;
		top: 15%;
		left: 15%;
		animation-delay: 0.5s;
	}

	.ring-3 {
		width: 100%;
		height: 100%;
		top: 0;
		left: 0;
		animation-delay: 1s;
	}

	@keyframes pulse {
		0%, 100% { opacity: 0.3; transform: scale(1); }
		50% { opacity: 0.6; transform: scale(1.05); }
	}

	/* Feature Content */
	.feature-content h2 {
		font-size: 2rem;
		margin-bottom: var(--space-lg);
		color: var(--gray-900);
	}

	.feature-content p {
		font-size: 1.125rem;
		line-height: 1.6;
		color: var(--gray-600);
		margin-bottom: var(--space-xl);
	}

	.feature-list {
		display: flex;
